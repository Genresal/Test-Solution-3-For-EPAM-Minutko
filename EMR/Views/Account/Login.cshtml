@model LoginViewModel
<!--<a asp-action="Register" asp-controller="Account">Регистрация</a>-->
<div class="col-md-2">
    <div class="card card-primary card-outline">
        <div class="card-header">
            <h3 class="card-title">Authorization</h3>
        </div>

        <div class="card-body">
            <form asp-action="Login" asp-controller="Account" asp-route-returnUrl="@Context.Request.Query["returnurl"]" method="post" asp-anti-forgery="true">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div>
                    <div class="form-group col-xs-3">
                        <label asp-for="Login" class="control-label">Login</label>
                        <input type="text" asp-for="Login" class="form-control" autocomplete="off" />
                        <span asp-validation-for="Login" class="text-danger" />
                    </div>
                    <div class="form-group col-xs-3">
                        <label asp-for="Password" class="control-label">Password</label>
                        <input asp-for="Password" class="form-control" autocomplete="off" />
                        <span asp-validation-for="Password" class="text-danger" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="LogIn" class="btn btn-primary" />
                    </div>
                </div>
            </form>

            <div class="form-group">
                <a asp-controller="Account" asp-action="LoginRandom" asp-route-roleId="1">
                    <input type="button" class="btn btn-light" value="Login as user" />
                </a>
            </div>
            <div class="form-group">
                <a asp-controller="Account" asp-action="LoginRandom" asp-route-roleId="2">
                    <input type="button" class="btn btn-light" value="Login as doctor" />
                </a>
            </div>
            <div class="form-group">
                <a asp-controller="Account" asp-action="LoginRandom" asp-route-roleId="3">
                    <input type="button" class="btn btn-light" value="Login as editor" />
                </a>
            </div>
            <div class="form-group">
                <a asp-controller="Account" asp-action="LoginRandom" asp-route-roleId="4">
                    <input type="button" class="btn btn-light" value="Login as admin" />
                </a>
            </div>
        </div>
            </div>
</div>

<partial name="_ValidationScriptsPartial" />
