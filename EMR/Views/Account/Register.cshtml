@model RegisterViewModel

<div class="col-md-2">
    <div class="card card-primary card-outline">
        <div class="card-header">
            <h3 class="card-title">Register</h3>
        </div>

        <div class="card-body">
            <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div>
                    <div class="form-group col-xs-3">
                        <label asp-for="Login" class="control-label"></label><br />
                        <input type="text" asp-for="Login" class="form-control" autocomplete="off" />
                        <span asp-validation-for="Login" class="text-danger" />
                    </div>
                    <div class="form-group col-xs-3">
                        <label asp-for="Password" class="control-label"></label><br />
                        <input asp-for="Password" class="form-control" autocomplete="off" />
                        <span asp-validation-for="Password" class="text-danger" />
                    </div>
                    <div class="form-group col-xs-3">
                        <label asp-for="ConfirmPassword" class="control-label"></label><br />
                        <input asp-for="ConfirmPassword" class="form-control" autocomplete="off" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger" />
                    </div>

                    <div class="form-group col-xs-3">
                        <label asp-for="RoleId" class="control-label"></label><br />
                        <select asp-for="RoleId" asp-items="ViewBag.Roles" class="form-control"></select>
                        <span asp-validation-for="RoleId" class="text-danger" />
                    </div>

                    <div class="form-group col-xs-3">
                        <input type="submit" value="Create account" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />

