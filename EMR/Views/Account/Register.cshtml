@model EMR.ViewModels.RegisterViewModel
<!--<a asp-action="Register" asp-controller="Account">Регистрация</a>-->
<div class="col-md-2">
    <div class="card card-primary card-outline">
        <div class="card-header">
            <h3 class="card-title">Register</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div>
                    <div class="row">
                        <div class="form-group col-xs-3">
                            <label asp-for="Login" class="control-label">Your login</label><br />
                            <input type="text" asp-for="Login" class="form-control" autocomplete="off" />
                            <span asp-validation-for="Login" class="text-danger" />
                        </div>
                        <div class="form-group col-xs-3">
                            <label asp-for="Password" class="control-label">Password</label><br />
                            <input asp-for="Password" class="form-control" autocomplete="off" />
                            <span asp-validation-for="Password" class="text-danger" />
                        </div>
                        <div class="form-group col-xs-3">
                            <label asp-for="ConfirmPassword" class="control-label">Re-enter password</label><br />
                            <input asp-for="ConfirmPassword" class="form-control" autocomplete="off" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger" />
                        </div>

                        <div class="form-group col-xs-3">
                            <label asp-for="RoleId" class="control-label">role</label><br />
                            <select asp-for="RoleId" asp-items="ViewBag.Roles" class="form-control"></select>
                            <span asp-validation-for="RoleId" class="text-danger" />
                        </div>
                        
                            <div>
                                <input type="submit" value="Create account" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
            </form>
        </div>
    </div>
</div>

