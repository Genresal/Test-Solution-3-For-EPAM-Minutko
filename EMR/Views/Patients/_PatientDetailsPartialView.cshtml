@model PatientViewModel

    <div class="text-center">
        <img src="@Html.ImageOrDefault(Model.PhotoUrl)" class="profile-user-img img-responsive img-circle" alt="User Image">
        </div>

        <h3 class="profile-username text-center">
            <span>@Model.FirstName</span>
            <span>@Model.LastName</span>
        </h3>
        <hr>

        <strong><i class="fas fa-birthday-cake mr-1"></i> @Html.DisplayNameFor(value => Model.Birthday)</strong>
        <p class="text-muted">@Model.Birthday</p>
        <hr>

        <strong><i class="fas fa-briefcase mr-1"></i> @Html.DisplayNameFor(value => Model.Job)</strong>
        <p class="text-muted">@Model.Job</p>
        <hr>

        <strong><i class="fas fa-at mr-1"></i> @Html.DisplayNameFor(value => Model.Email)</strong>
        <p class="text-muted">@Model.Email</p>
        <hr>

        <strong><i class="fas fa-phone mr-1"></i> @Html.DisplayNameFor(value => Model.PhoneNumber)</strong>
        <p class="text-muted">@Model.PhoneNumber</p>
