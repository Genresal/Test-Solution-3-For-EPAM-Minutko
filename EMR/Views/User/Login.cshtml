@model EMR.ViewModels.LoginViewModel

@{
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<h2>Авторизация</h2>

<!--<a asp-action="Register" asp-controller="Account">Регистрация</a>-->

    <form asp-action="Login" asp-controller="User" asp-route-returnUrl="@Context.Request.Query["returnurl"]" method="post" asp-anti-forgery="true"> 
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="row">
                <div class="form-group col-xs-3">
                    <label asp-for="Login" class="control-label">Введите Логин</label>
                    <input type="text" asp-for="Login" class="form-control" autocomplete="off" />
                    <span asp-validation-for="Login" class="text-danger" />
                </div>
            </div>
            <div class="row">
                <div class="form-group col-xs-3">
                    <label asp-for="Password" class="control-label">Введите пароль</label>
                    <input asp-for="Password" class="form-control" autocomplete="off" />
                    <span asp-validation-for="Password" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Войти" class="btn btn-primary" />
            </div>
        </div>
</form>
