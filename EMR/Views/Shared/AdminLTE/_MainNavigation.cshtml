<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <a class="brand-link" asp-area="" asp-controller="Home" asp-action="Index">
        <i class="fas fa-home"></i>
        <span class="brand-text font-weight-light">EMR</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            @if (User.Identity.IsAuthenticated)
            {
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <div class="image">
                            <img src="@Html.ImageOrDefault(User.FindFirst("PhotoUrl")?.Value)" class="img-circle elevation-2" alt="User Image">
                        </div>
                        <a asp-area="" asp-controller="Home" asp-action="Details" asp-route-id="@User.FindFirst("UserId")?.Value" title="Manage">@User.FindFirst("FullName")?.Value</a>
                    </li>
                    <li>
                        <a class="d-block" asp-controller="Account" asp-action="Logout">Log out</a>
                    </li>
                </ul>
            }
            else
            {
                <a class="d-block" asp-controller="Account" asp-action="Login">LogIn</a>
            }
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">

            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Add icons to the links using the .nav-icon class
    with font-awesome or any other icon font library -->
                @if (User.IsInRole("Admin") || User.IsInRole("Editor"))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Records" asp-action="Index">
                            <i class="nav-icon far fa-circle"></i>
                            <p>
                                Records
                            </p>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Users" asp-action="Index">
                            <i class="nav-icon far fa-circle"></i>
                            <p>
                                Users
                            </p>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Positions" asp-action="Index">
                            <i class="nav-icon far fa-circle"></i>
                            <p>
                                Doctor's positions
                            </p>
                        </a>
                    </li>
                }
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="DbPage">
                        <i class="nav-icon far fa-circle"></i>
                        <p>
                            Database
                        </p>
                    </a>
                </li>
            </ul>

        </nav>
        <!-- /.sidebar-menu -->

    </div>
    <!-- /.sidebar -->
</aside>