@model UserViewModel

<div class="col-md-6">
    <div class="card card-primary card-outline">
        <div class="card-header">
            <h3 class="card-title">User</h3>
        </div>

        <div class="card-body">
            <form asp-action="AddOrEdit" asp-route-id="@Model.Id">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="RoleId" />
                <input type="hidden" asp-for="Login" />
                <input type="hidden" asp-for="Password" />

                <div class="form-group">
                    <label asp-for="@Model.FirstName" class="control-label"></label>
                    <input asp-for="@Model.FirstName" class="form-control">
                    <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.LastName" class="control-label"></label>
                    <input asp-for="@Model.LastName" class="form-control">
                    <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Email" class="control-label"></label>
                    <input asp-for="@Model.Email" class="form-control">
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Birthday" class="control-label"></label>
                    <input type="date" asp-for="@Model.Birthday" class="form-control">
                    <span asp-validation-for="@Model.Birthday" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.PhoneNumber" class="control-label"></label>
                    <input asp-for="@Model.PhoneNumber" class="form-control">
                    <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.PhotoUrl" class="control-label"></label>
                    <input asp-for="@Model.PhotoUrl" class="form-control">
                    <span asp-validation-for="@Model.PhotoUrl" class="text-danger"></span>
                </div>

                <hr />

                <div class="form-group">
                    <div class="col-md-6 offset-md-3">
                        <input type="submit" value="Save" class="btn btn-primary btn-block" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

    <partial name="_ValidationScriptsPartial" />
