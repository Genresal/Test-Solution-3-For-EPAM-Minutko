@model EMR.ViewModels.DoctorViewModel
@{
    ViewData["Title"] = "Home page";

}

<partial name="_TableScriptsAndStyles" />

<h3>@ViewData["Title"]</h3>

<div class="row">

    <div class="col-md-2">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">Patient</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                @await Html.PartialAsync("_DoctorDetailsPartialView.cshtml", Model))
                <a href="/Patients/AddOrEdit?id=@Model.Id" class="btn btn-primary btn-block"><b>Edit profile</b></a>
            </div>
        </div>
    </div>

    <div class="col-md-10">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">Records</h3>
            </div>
            <div class="card-body">
                @await Html.PartialAsync("~/Views/Patients/_PatientsInfoTable.cshtml", new EMR.ViewModels.PatientSearchModel() { DoctorId = Model.Id })
            </div>
        </div>
    </div>
</div>



